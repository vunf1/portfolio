{
  "name": "joao-maia-portfolio",
  "version": "1.0.0",
  "description": "João Maia's Modern Portfolio Website built with Vite + Preact",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:gh-pages": "NODE_ENV=production vite build",
    "preview": "vite preview",
    "serve": "vite preview --port 3000",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "translate": "node src/scripts/translate.js",
    "translate:watch": "nodemon src/scripts/translate.js --watch src/locales/en/translation.json",
    "dev:translate": "npm run translate && npm run dev",
    "deploy": "npm run build:gh-pages && gh-pages -d dist"
  },
  "keywords": [
    "portfolio",
    "preact",
    "vite",
    "react",
    "modern",
    "typescript"
  ],
  "author": "João Maia",
  "license": "MIT",
  "dependencies": {
    "devicon": "^2.17.0",
    "dotenv": "^17.2.1",
    "i18next": "^25.4.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "preact": "^10.19.6",
    "preact-router": "^4.1.2",
    "react-i18next": "^15.7.3"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.8.1",
    "@types/node": "^20.11.30",
    "@types/react-i18next": "^7.8.3",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "typescript": "^5.4.3",
    "vite": "^5.1.4",
    "vite-plugin-html": "^3.2.0"
  }
}
