{
  "name": "joao-maia-portfolio",
  "version": "1.0.0",
  "description": "João Maia's Modern Portfolio Website built with Vite + Preact",
  "type": "module",
  "scripts": {
    "dev": "npm run copy-data && vite",
    "dev:fast": "vite --force",
    "dev:analyze": "vite --mode analyze",
    "build": "npm run copy-data && vite build",
    "build:gh-pages": "npm run copy-data && cross-env NODE_ENV=production vite build",
    "build:analyze": "npm run copy-data && cross-env NODE_ENV=production vite build --mode analyze",
    "build:staging": "npm run copy-data && cross-env NODE_ENV=staging vite build",
    "build:production": "npm run copy-data && cross-env NODE_ENV=production vite build",
    "build:components": "npm run type-check && npm run lint && npm run build",
    "preview": "npm run copy-data && vite preview",
    "serve": "npm run copy-data && vite preview",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "lint:components": "eslint src/components --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:ui": "eslint src/components/ui --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "deploy": "npm run build:gh-pages && gh-pages -d dist",
    "copy-data": "node scripts/copy-data.cjs",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "performance:lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "performance:budget": "npm run build && npm run verify-dist",
    "optimize:images": "node scripts/optimize-images.cjs",
    "optimize:css": "npm run lint:components && npm run build:components",
    "ci:test": "npm run type-check && npm run lint && npm run build:gh-pages",
    "ci:security": "npm audit --audit-level moderate",
    "ci:dependencies": "npm outdated || true",
    "ci:components": "npm run type-check && npm run lint:components && npm run build:components",
    "verify-dist": "node verify-dist.js",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "clean": "rimraf dist node_modules/.vite",
    "clean:all": "rimraf dist node_modules/.vite node_modules package-lock.json",
    "reinstall": "npm run clean:all && npm install",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,md}\"",
    "prepare": "husky install"
  },
  "keywords": [
    "portfolio",
    "preact",
    "vite",
    "react",
    "modern",
    "typescript",
    "component-system",
    "design-tokens"
  ],
  "author": "João Maia",
  "license": "MIT",
  "dependencies": {
    "devicon": "^2.17.0",
    "dotenv": "^17.2.1",
    "i18next": "^25.4.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "preact": "^10.19.6",
    "preact-router": "^4.1.2",
    "react-i18next": "^15.7.3"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.8.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/preact": "^3.2.4",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.11.30",
    "@types/react-i18next": "^7.8.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "cssnano": "^6.1.2",
    "eslint": "^8.57.0",
    "gh-pages": "^6.1.1",
    "husky": "^9.0.11",
    "imagemin": "^9.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "imagemin-webp": "^8.0.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "postcss": "^8.4.49",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "rollup-plugin-visualizer": "^5.12.0",
    "sharp": "^0.34.3",
    "tsx": "^4.20.5",
    "typescript": "^5.4.3",
    "vite": "^5.1.4",
    "vite-plugin-html": "^3.2.0",
    "vitest": "^1.3.1"
  }
}
